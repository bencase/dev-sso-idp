{
    "name": "dev-sso-idp",
    "version": "1.0.0",
    "description": "A dev SSO IdP with a redirect page and backend server.",
    "type": "module",
    "engines": {
        "node": ">=22.1.0"
    },
    "main": "app.js",
    "scripts": {
        "start": "node --env-file=.env --env-file=.production.env src/app.js",
        "dev": "NODE_ENV=development nodemon --env-file=.env --env-file=.development.env src/app.js",
        "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
        "prepare": "husky install",
        "test": "node --experimental-vm-modules ./node_modules/.bin/jest",
        "coverage": "node --experimental-vm-modules ./node_modules/.bin/jest --coverage",
        "minify": "gulp"
    },
    "author": {
        "name": "Ben Case",
        "email": "ben@benswords.com",
        "url": "https://benswords.com"
    },
    "license": "ISC",
    "dependencies": {
        "compression": "^1.7.4",
        "express": "^4.19.2",
        "helmet": "^8.0.0",
        "jose": "^5.9.3",
        "winston": "^3.14.2",
        "yaml": "^2.5.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.10.0",
        "eslint": "^9.10.0",
        "globals": "^15.9.0",
        "gulp": "^5.0.0",
        "gulp-csso": "^4.0.1",
        "gulp-htmlmin": "^5.0.1",
        "gulp-terser": "^2.1.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-location-mock": "^2.0.0",
        "jest-when": "^3.7.0",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.3",
        "timekeeper": "^2.3.1"
    },
    "lint-staged": {
        "*.{js,mjs,cjs,jsx,mjsx,ts,mts,tsx,mtsx}": "eslint --cache --fix",
        "*.{js,mjs,cjs,jsx,mjsx,ts,mts,tsx,mtsx,css,md}": "prettier --write"
    }
}
